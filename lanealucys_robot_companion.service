[Unit]
Description=Lanealucys_robot_companion
Wants=fastdds_discovery_server.service
Before=lanealucys_robot.service
PartOf=lanealucys_robot.service

[Service]
Environment="HOME=root" 
#Environment="ROS_DISCOVERY_SERVER=127.0.0.1:11811"
ExecStart=/bin/bash -c 'source /root/ros_ws/install/setup.bash; ros2 launch lanealucys_robot companion_robot_launch.py'
Type=simple
Restart=on-failure


[Install]
WantedBy=multi-user.target
